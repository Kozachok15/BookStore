<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store.Web</title>
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;700&display=swap" rel="stylesheet">
</head>
<body style="padding-right: 25%; padding-left: 20%;">
    <header style="margin-top:30px; ">
        <nav style="display:flex; justify-content:space-around;">

            <a style="font-size: 28px;" asp-area="Admin" asp-controller="Home" asp-action="Index">Web-Shop on C#</a>
            <form action="@Url.Action("Index","Search")" method="get">
                <input style="width: 350px; height: 37px; border: solid 1px #c9c9c9; font-size: 18px;" type="search" name="query" />
                <button style="font-size: 18px; height: 37px; width: 100px; border: solid 1px #c9c9c9;" type="submit">Search</button>

            </form>

            <span style="font-size: 22px;">
                @{
                    if (Context.Session.TryGetCart(out Cart cart))
                    {
                        <a href="@Url.Action("Index", "Order")">Cart: @cart.TotalCount <br /> Total Price: @cart.TotalPrice</a>
                    }
                    else
                    {
                        @:Cart: Empty
                    }
                }
            </span>

        </nav>
    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
