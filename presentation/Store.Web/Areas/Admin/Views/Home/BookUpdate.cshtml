@model BookEF
@{
    ViewData["Title"] = "Home Page";
}

<h2>Update book: Id = @Model.Id, Old Title = @Model.TitleOf </h2>

<form asp-action="Update" asp-controller="Home" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="@Model.TitleOf" required /><br>

    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="@Model.GenreOf" /><br>

    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="@Model.DescriptionOf" /><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="@Model.PriceOf" required /><br>

    <input type="submit" value="Update book" />
</form>

