@model BookEF

<body style="padding-right: 25%; padding-left: 20%;">
    <div>
        <h1>Admin View</h1>   
        <form action="@Url.Action("DeleteBook","Home", new {id = Model.Id})" method="post">
            <button style="font-size: 18px; height: 37px; width: 100px; border: solid 1px #c9c9c9;" type="submit">Delete</button>
        </form>

        <form action="@Url.Action("UpdateBook", "Book", new {id = Model.Id})" method="post">
            <button style="font-size: 18px; height: 37px; width: 100px; border: solid 1px #c9c9c9;" type="submit">Update</button>
        </form>
    </div>
    
    <div class="BookImgAuthorPrice" style="margin-top: 100px; display:flex; ">
        <img src="@Url.Content("~/Images/book.png")">
        <div style="padding-left: 20%;">
            <h1 style="font-size: 32px"> @Model.TitleOf</h1>

            <p style="font-size: 20px"> Genre: @Model.GenreOf</p>
            <p style="font-size: 20px"> Author: @Model.Author.FullName</p>
            <p style="font-size: 20px"> Publisher: @Model.Publisher.NameOf</p>
            <p></p>
            <p style="font-size: 20px">Price: @Model.PriceOf $</p>
        </div>

    </div>

    <div>
        <p style="font-size: 24px">@Model.DescriptionOf</p>
    </div>
</body>




